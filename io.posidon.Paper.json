{
    "app-id" : "io.posidon.Paper",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.posidon.Paper",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-documents"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "sources" : [{
                "type" : "git",
                "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                "branch" : "main"
            }]
        },
        {
            "name" : "Paper",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [{
                "type" : "git",
                "url" : "https://gitlab.com/daudix-UFO/paper"
            }]
        }
    ]
}
